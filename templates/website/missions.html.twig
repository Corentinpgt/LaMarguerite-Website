{% block javascripts %}
<script>


	// If we come frome the home page, using the button of the lightMissions
	if (getCookie('scrollProject') != null) {
		$('html, body').animate({
			scrollTop: $('#scroll_projects').offset().top
		}, 1000);
		deleteCookie('scrollProject');
	}

	// Scroll to projects smoothly
	function scrollToProjects() {
		$('html, body').animate({
			scrollTop: $('#scroll_projects').offset().top
		}, 'slow');
	}

	// Get template, nav & container
	let missions = $('.temp__mission');
	let container = $('#container_missions');
	let nav = $('#missions_nav');

	function handlerMission(ev) {

		// Template the mission using the data-id of the nav

		let target = $(ev.target);
		let id = target.data('id');
		let mission = missions[id];
		container.html(mission.innerHTML);

		// Add Navigation

		var row = container.find('.row');
		nav.removeClass('nav__none');
		row.append(nav);


		// Add style on the clicked btn

		let buttons = $('.mission_btn');
		buttons.each(function() {
			let btn = $(this);
			if (id === btn.data('id')) {
				btn.addClass('missions-selected');
			}
			else {
				btn.removeClass('missions-selected');
			}
		});

		listerner();
	}

	function listerner() {

		// If desktop, then we show the desktop version of the missions

		if ($(window).width() > 768) {
			nav.css('display', 'flex');
			let buttons = $('.mission_btn');
			buttons.each(function() {
				$(this).on("click", handlerMission);
			});
		}
		else {
			nav.css('display', 'none');
		}
	}

	listerner();

	$(window).on('resize', listerner);
</script>

