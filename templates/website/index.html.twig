							<div class="eventCard__header">
								<h2>{{event.date | date('d/m/Y')}}</h2>
							</div>
							<div class="eventCard__content">
								<h3>{{event.title}}</h3>
								<p>{{event.description}} </p>
							</div>
							<div class="eventCard__footer">
								<p>{{event.place}}</p>
							</div>
						</div>
					{% endfor %}
					
				</div>
			</div>
		</div>
	</div>
</div>




