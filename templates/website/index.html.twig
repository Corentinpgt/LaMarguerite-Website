{% block javascripts %}
    <script>

	// If cookie notification, close
	$(document).ready(function() {
		if (getCookie('notif') === 'true') {
			$('#notification').css({
				'max-height': '0',
				'margin-bottom': '0'
			})
		}
	});



	// Close the notification 
	$('#notification_cross').change(function() {
		if ($(this).is(':checked')) {
			$(this).parent().css({
				'max-height': '0',
				'margin-bottom': '0'

			});
			setCookie('notif', true, 1);

		}
	});


	// Button to scroll to projects in missions page
	$('#buttonToProject').click(function() {
		setCookie("scrollProject", true, 1);
	});



	// Get the cars & carousel
	let eventCards = document.querySelectorAll('.eventCard');
	let eventCarousel = document.querySelector('.event__carousel-inner');


	// Set first card
	let currentCardIndex = 0;
	let currentCard = eventCards[currentCardIndex];

	// Set buttons & listeners
	let prevButton = document.getElementById('event__carousel-arrowLeft');
	let nextButton = document.getElementById('event__carousel-arrowRight');
	prevButton.style.display = 'none';

	nextButton.addEventListener('click', nextCard);
	prevButton.addEventListener('click', prevCard);


	// Slide to next card
	function nextCard() {
		let cardWidth = currentCard.offsetWidth;
		// See if we are not at the last card
		if (currentCardIndex < eventCards.length - 1) {

			// Turn on the previous button cause we are going at the second card
			if (currentCardIndex === 0) {
				prevButton.style.display = 'block';
			}
			currentCardIndex++;

			// translate
			eventCarousel.style.transform = `translateX(-${cardWidth * currentCardIndex}px)`;

			// If it's the last card, turn off the next button
			if (currentCardIndex === eventCards.length - 1) {
				nextButton.style.display = 'none';
			}
		}
	}

	function prevCard() {
		let cardWidth = currentCard.offsetWidth;

		// See if we are not at the first card
		if (currentCardIndex > 0) {

			// Turn on the next button cause we are going at the second to last card
			if (currentCardIndex === eventCards.length - 1) {
				nextButton.style.display = 'block';
			}
			currentCardIndex--;


			// translate
			eventCarousel.style.transform = `translateX(-${cardWidth * currentCardIndex}px)`;

			// If it's the first card, turn off the previous button
			if (currentCardIndex === 0) {
				prevButton.style.display = 'none';
			}
		}
	}


	</script>
