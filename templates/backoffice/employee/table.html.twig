{# templates/backoffice/employee/table.html.twig #}

<div class="table-responsive">
	<table id="dt_employees" class="table table-striped table-bordered table-hover width-99p">
		<thead class="thead-dark">
			<tr>
				<th>{{ 'lastname' | trans }}</th>
				<th>{{ 'firstname' | trans }}</th>
				<th>{{ 'job' | trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for employee in employees %}
				<tr>
					<td>{{ employee.lastname }}</td>
					<td>{{ employee.firstname }}</td>
					<td>{{ employee.job }}</td>
					<td>
						<div class="{#width-75#} text-right">
							<a href="{{ path('employee_edit', {'id' : employee.id}) }}" class="btn btn-sm btn-edit">
								<i class="far fa-edit"></i>
							</a>

							<a href="javascript:void(0);" class="btn btn-sm btn-delete"
								onclick="if(confirm('{{ 'confirm.delete' | trans }}')){window.location.href = '{{ path('employee_delete', {'id' : employee.id}) }}'}">
								<i class="fas fa-times"></i>
							</a>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
