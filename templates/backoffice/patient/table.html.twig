{# templates/backoffice/patient/table.html.twig #}

<div class="table-responsive">
	<table id="dt_patients" class="table table-striped table-bordered table-hover width-99p">
		<thead class="thead-dark">
			<tr>
				<th>{{ 'lastname' | trans }}</th>
				<th>{{ 'firstname' | trans }}</th>
				<th>{{ 'joinDate' | trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for patient in patients %}
				<tr>
					<td>{{ patient.lastname }}</td>
					<td>{{ patient.firstname }}</td>
					<td>{{ patient.joinDate | date("Y/m/d") }}</td>
					<td>
						<div class="{#width-75#} text-right">
							<a href="{{ path('patient_edit', {'id' : patient.id}) }}" class="btn btn-sm btn-edit">
								<i class="far fa-edit"></i>
							</a>

							<a href="javascript:void(0);" class="btn btn-sm btn-delete"
								onclick="if(confirm('{{ 'confirm.delete' | trans }}')){window.location.href = '{{ path('patient_delete', {'id' : patient.id}) }}'}">
								<i class="fas fa-times"></i>
							</a>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
