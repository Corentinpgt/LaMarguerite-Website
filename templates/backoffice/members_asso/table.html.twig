{# templates/backoffice/members_asso/table.html.twig #}

<div class="table-responsive">
	<table id="dt_members_assos" class="table table-striped table-bordered table-hover width-99p">
		<thead class="thead-dark">
			<tr>
				<th>{{ 'name' | trans }}</th>
				<th>{{ 'membership_date' | trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for members in members_asso %}
				<tr>
					<td>{{ members.name }}</td>
					<td>{{ members.membershipDate | date("Y/m/d") }}</td>
					<td>
						<div class="{#width-75#} text-right">
							<a href="{{ path('members_asso_view', {'id' : members.id}) }}" class="btn btn-sm btn-view">
								<i class="far fa-eye"></i>
							</a>
							<a href="{{ path('members_asso_edit', {'id' : members.id}) }}" class="btn btn-sm btn-edit">
								<i class="far fa-edit"></i>
							</a>
							<a href="javascript:void(0);" class="btn btn-sm btn-delete"
								onclick="if(confirm('{{ 'confirm.delete' | trans }}')){window.location.href = '{{ path('members_asso_delete', {'id' : members.id}) }}'}">
								<i class="fas fa-times"></i>
							</a>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
