{# templates/backoffice/base/base_login.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Axiom.Ploop Login</title>

	{# Google Font: Source Sans Pro #}
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
	{# Font Awesome #}
	<link rel="stylesheet" href="{{ asset('theme_master/plugins/fontawesome-free/css/all.min.css') }}">
	{# Theme style #}
	<link rel="stylesheet" href="{{ asset('theme_master/dist/css/adminlte.css') }}">
	<style>
	body {
		-webkit-background-size: cover;
		-moz-background-size: cover;
		-o-background-size: cover;
		background-size: cover;
	}
	</style>
</head>

<body class="hold-transition login-page">

	{% block body %}{% endblock %}

	{# jQuery #}
	<script src="{{ asset('theme_master/plugins/jquery/jquery.min.js') }}"></script>

	{# Bootstrap 4 #}
	<script src="{{ asset('theme_master/plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

	{# AdminLTE App #}
	<script src="{{ asset('theme_master/dist/js/adminlte.js') }}"></script>

	<script>
	$(document).ready(function(){
		randomImg();
	});

	// https://awik.io/generate-random-images-unsplash-without-using-api/
	function randomImg() {
		$('body').css("background-image", "url('https://source.unsplash.com/user/jerrykavan')");
		$('body').css("background-image", "url('https://source.unsplash.com/random/?succulent')");
		$('body').css("background-image", "no-repeat center center fixed");
		//document.getElementById('img-container').innerHTML = '<img src="https://source.unsplash.com/random/?color">';
	}
	</script>
</body>
</html>
