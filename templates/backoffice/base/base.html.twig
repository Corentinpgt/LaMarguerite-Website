{# templates/backoffice/base/base.html.twig #}

{# https://fontawesome.com/v5/search?m=free #}

{% set route = app.request.get('_route') %}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>{% block title %}Nexus{% endblock %}</title>

	{# Google Font: Source Sans Pro #}
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
	{# Font Awesome #}
	<link rel="stylesheet" href="{{ asset('theme_master/plugins/fontawesome-free/css/all.min.css') }}">
	{# Ionicons #}
	<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
	{# Theme style #}
	<link rel="stylesheet" href="{{ asset('theme_master/dist/css/adminlte.css') }}">
	{# overlayScrollbars #}
	<link rel="stylesheet" href="{{ asset('theme_master/plugins/overlayScrollbars/css/OverlayScrollbars.min.css') }}">
	{# Summernote #}
	<link rel="stylesheet" href="{{ asset('theme_master/plugins/summernote/summernote-bs4.min.css') }}">
	{# DataTables #}
	<link rel="stylesheet" href="{{ asset('theme_master/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css') }}">
	<link rel="stylesheet" href="{{ asset('theme_master/plugins/datatables-responsive/css/responsive.bootstrap4.min.css') }}">
	<link rel="stylesheet" href="{{ asset('theme_master/plugins/datatables-buttons/css/buttons.bootstrap4.min.css') }}">

	{# Bootstrap.Datepicker#}
	<link href="{{ asset('theme_master/plugins/bootstrap-datepicker/css/datepicker3.css') }}" rel="stylesheet" type="text/css" media="screen" />

	{# Toastr #}
	<link rel="stylesheet" href="{{ asset('theme_master/plugins/toastr/toastr.min.css') }}">

	{# Chart.js #}
	<link rel="stylesheet" href="{{ asset('theme_master/plugins/chart.js/Chart.min.css') }}">

	{# ClockPicker.js #}
	<link rel="stylesheet" href="{{ asset('theme_master/plugins/clockpicker/jquery-clockpicker.css') }}">

	{# Dropzone.js #}
	<link rel="stylesheet" href="{{ asset('theme_master/plugins/dropzone/dropzone.css') }}">

	{# Custom #}
	<link rel="stylesheet" href="{{ asset('theme_master/custom/style.css') }}">
	<link rel="stylesheet" href="{{ asset('theme_master/custom/buttons.css') }}">
	<link rel="stylesheet" href="{{ asset('theme_master/custom/membership.css') }}">
	<link rel="stylesheet" href="{{ asset('theme_master/custom/dashboard.css') }}">
	<link rel="stylesheet" href="{{ asset('theme_master/custom/sidebar_items.css') }}">
</head>

<body class="hold-transition sidebar-mini layout-fixed">

	<div class="wrapper">

		{{ include('backoffice/base/top_navbar.html.twig') }}


		{# Main Sidebar Container #}
		<aside class="main-sidebar sidebar-dark-primary elevation-4">
			{{ include('backoffice/base/logo.html.twig') }}
			<div class="sidebar">
				{{ include('backoffice/base/sidebar_user_panel.html.twig') }}
				{{ include('backoffice/base/sidebar_menu.html.twig') }}
			</div>
		</aside>

		{# Content Wrapper. Contains page content #}
		<div class="content-wrapper">

			{# Content Header (Page header) #}
			<div class="content-header">
				<div class="container-fluid">
					<div class="row mb-2">
						<div class="col-sm-6">
							<h1 class="m-0">{% block main_page_title %}{% endblock %}</h1>
						</div>
						<div class="col-sm-6">
							<ol class="breadcrumb float-sm-right">
								{% block breadcrumb %}{% endblock %}
								{#
								<li class="breadcrumb-item">
									<a href="#">Home</a>
								</li>
								<li class="breadcrumb-item active">
									Dashboard
								</li>
								#}
							</ol>
						</div>
					</div>
				</div>
			</div>

			{# Main content #}
			<section class="content">
				<div class="container-fluid">
					{% block body %}{% endblock %}
				</div>
			</section>
		</div>
		<footer class="main-footer">
			<strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong>
			All rights reserved.
			<div class="float-right d-none d-sm-inline-block">
				<b>Version</b> 3.2.0
			</div>
		</footer>

		{# Control Sidebar #}
		<aside class="control-sidebar control-sidebar-dark">
		{# Control sidebar content goes here #}
		</aside>
	</div>

	{# jQuery #}
	<script src="{{ asset('theme_master/plugins/jquery/jquery.min.js') }}"></script>
	{# jQuery UI 1.11.4 #}
	<script src="{{ asset('theme_master/plugins/jquery-ui/jquery-ui.min.js') }}"></script>
	{# Resolve conflict in jQuery UI tooltip with Bootstrap tooltip #}
	<script>
		$.widget.bridge('uibutton', $.ui.button)
	</script>
	{# Bootstrap 4 #}
	<script src="{{ asset('theme_master/plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
	{# Summernote #}
	<script src="{{ asset('theme_master/plugins/summernote/summernote-bs4.min.js') }}"></script>
	{# overlayScrollbars #}
	<script src="{{ asset('theme_master/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js') }}"></script>

	{# DataTables  & Plugins #}
	<script src="{{ asset('theme_master/plugins/datatables/jquery.dataTables.min.js') }}"></script>
	<script src="{{ asset('theme_master/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js') }}"></script>
	<script src="{{ asset('theme_master/plugins/datatables-responsive/js/dataTables.responsive.min.js') }}"></script>
	<script src="{{ asset('theme_master/plugins/datatables-responsive/js/responsive.bootstrap4.min.js') }}"></script>
	<script src="{{ asset('theme_master/plugins/datatables-buttons/js/dataTables.buttons.min.js') }}"></script>
	<script src="{{ asset('theme_master/plugins/datatables-buttons/js/buttons.bootstrap4.min.js') }}"></script>

	{# Bootstrap.Datepicker#}
	<script src="{{ asset('theme_master/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js') }}"></script>

	{# Toastr #}
	<script src="{{ asset('theme_master/plugins/toastr/toastr.min.js') }}"></script>

	{# Chart.js #}
	<script src="{{ asset('theme_master/plugins/chart.js/Chart.min.js') }}"></script>

	{# ClockPicker.js #}
	<script src="{{ asset('theme_master/plugins/clockpicker/jquery-clockpicker.js') }}"></script>

	{# Dropzone.js #}
	<script src="{{ asset('theme_master/plugins/dropzone/dropzone.js') }}"></script>

	{# AdminLTE App #}
	<script src="{{ asset('theme_master/dist/js/adminlte.js') }}"></script>

	<script>
	$(document).ready(function(){
		{% for flash_message in app.session.flashBag.get('notice') %}
			toastr.success("{{ flash_message }}");
		{% endfor %}

		{% for flash_message in app.session.flashBag.get('info') %}
			toastr.info("{{ flash_message }}");
		{% endfor %}

		{% for flash_message in app.session.flashBag.get('warning') %}
			toastr.warning("{{ flash_message }}");
		{% endfor %}

		{% for flash_message in app.session.flashBag.get('error') %}
			toastr.error("{{ flash_message }}");
		{% endfor %}
	});
	</script>

	<script>
	function isEmpty(field)
	{
		if (field == 'undefined' || field == "" || field == 0)
			return true;
		return false;
	}
	</script>


	{% block scripts %}{% endblock %}
</body>
</html>
