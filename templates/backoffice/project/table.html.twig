{# templates/backoffice/project/table.html.twig #}

<div class="table-responsive">
	<table id="dt_projects" class="table table-striped table-bordered table-hover width-99p">
		<thead class="thead-dark">
			<tr>
				<th>{{ 'name' | trans }}</th>
				<th>{{ 'description' | trans }}</th>
				<th>{{ 'link_label' | trans }}</th>
				<th>{{ 'link' | trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for project in projects %}
				<tr>
					<td>{{ project.name }}</td>
					<td>{{ project.description }}</td>
					<td>{{ project.linkLabel }}</td>
					<td>{{ project.link }}</td>
					<td>
						<div class="{#width-75#} text-right">
							<a href="{{ path('project_edit', {'id' : project.id}) }}" class="btn btn-sm btn-edit">
								<i class="far fa-edit"></i>
							</a>

							<a href="javascript:void(0);" class="btn btn-sm btn-delete"
								onclick="if(confirm('{{ 'confirm.delete' | trans }}')){window.location.href = '{{ path('project_delete', {'id' : project.id}) }}'}">
								<i class="fas fa-times"></i>
							</a>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
