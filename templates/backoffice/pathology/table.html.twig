{# templates/backoffice/pathology/table.html.twig #}

<div class="table-responsive">
	<table id="dt_pathologys" class="table table-striped table-bordered table-hover width-99p">
		<thead class="thead-dark">
			<tr>
				<th>{{ 'name' | trans }}</th>
				<th>{{ 'description' | trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for pathology in pathologys %}
				<tr>
					<td>{{ pathology.name }}</td>
					<td>{{ pathology.description }}</td>
					<td>
						<div class="{#width-75#} text-right">
							<a href="{{ path('pathology_edit', {'id' : pathology.id}) }}" class="btn btn-sm btn-edit">
								<i class="far fa-edit"></i>
							</a>

							<a href="javascript:void(0);" class="btn btn-sm btn-delete"
								onclick="if(confirm('{{ 'confirm.delete' | trans }}')){window.location.href = '{{ path('pathology_delete', {'id' : pathology.id}) }}'}">
								<i class="fas fa-times"></i>
							</a>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
