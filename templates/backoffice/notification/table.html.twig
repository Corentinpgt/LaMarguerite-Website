{# templates/backoffice/notification/table.html.twig #}

<div class="table-responsive">
	<table id="dt_notifications" class="table table-striped table-bordered table-hover width-99p">
		<thead class="thead-dark">
			<tr>
				<th>{{ 'date_over' | trans }}</th>
				<th>{{ 'title' | trans }}</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for notif in notification %}
				<tr>
					<td>{{ notif.dateOver | date("d/m/Y") }}</td>
					<td>{{ notif.title }}</td>
					<td>
						<div class="{#width-75#} text-right">
							<a href="{{ path('notification_edit', {'id' : notif.id}) }}" class="btn btn-sm btn-edit">
								<i class="far fa-edit"></i>
							</a>

							<a href="javascript:void(0);" class="btn btn-sm btn-delete"
								onclick="if(confirm('{{ 'confirm.delete' | trans }}')){window.location.href = '{{ path('notification_delete', {'id' : notif.id}) }}'}">
								<i class="fas fa-times"></i>
							</a>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
